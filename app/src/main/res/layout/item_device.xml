<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="60dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/img_dev"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/tv_dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_dev"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="light_01"
        android:textSize="16sp"
        android:textColor="@color/color_333333"
        />

    <ImageView
        android:id="@+id/img_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/arrow_right"/>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp">
        <ImageView
            android:id="@+id/chk_dev_switch"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_45"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn_bg_switch"
            android:layout_centerVertical="true"
            android:checked="true"
            android:textStyle="bold"
            />
        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/pb_lock"
            android:layout_width="80dp"
            android:paddingTop="5dp"
            android:indeterminateTint="#d38fdb"
            android:layout_height="40dp" />
    </RelativeLayout>



</RelativeLayout>
